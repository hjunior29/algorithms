{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "mix_task",
      "name": "mix run (Debug)",
      "request": "launch",
      "task": "run",
      "taskArgs": ["--no-halt"],
      "projectDir": "${workspaceRoot}",
      "exitAfterTaskReturns": false
    },
    {
      "type": "mix_task",
      "name": "mix test (Debug)",
      "request": "launch",
      "task": "test",
      "projectDir": "${workspaceRoot}",
      "requireFiles": ["test/**/test_helper.exs", "test/**/*_test.exs"]
    },
    {
      "type": "mix_task",
      "name": "Phoenix Server (Debug)",
      "request": "launch",
      "task": "phx.server",
      "projectDir": "${workspaceRoot}",
      "exitAfterTaskReturns": false
    }
  ]
}